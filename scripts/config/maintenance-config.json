{
  "version": "1.0",
  "last_updated": "2025-08-20",
  "cache_cleanup_days": 7,
  "log_retention_days": 30,
  "backup_retention_days": 90,
  "temp_file_patterns": [
    "*.tmp",
    "*.temp", 
    "*~",
    ".DS_Store",
    "Thumbs.db",
    "*.swp",
    "*.swo",
    ".vscode/settings.json.bak"
  ],
  "cache_directories": [
    "__pycache__",
    ".mypy_cache",
    "node_modules",
    ".vite",
    "dist",
    ".next",
    ".nuxt",
    "build",
    "target",
    ".gradle",
    ".yarn/cache"
  ],
  "excluded_paths": [
    "archive",
    ".git",
    "node_modules",
    "venv",
    "env",
    "__pycache__",
    ".mypy_cache"
  ],
  "auto_archive_patterns": [
    "*-old.*",
    "*-backup.*",
    "*.bak",
    "*-copy.*",
    "*-duplicate.*",
    "v[0-9]*-*.md"
  ],
  "file_size_threshold_mb": 100,
  "monitoring": {
    "enabled": true,
    "check_large_files": true,
    "check_duplicate_files": true,
    "validate_hierarchy": true,
    "generate_reports": true
  },
  "notifications": {
    "enabled": false,
    "email": "",
    "webhook_url": ""
  },
  "agent_hierarchy": {
    "tier0_coordination": [
      "master-orchestrator.md",
