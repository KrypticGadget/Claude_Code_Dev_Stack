  },
  "directory_structure": {
    "core": {
      "agents": "Agent definitions organized by tier hierarchy",
      "audio": "Audio processing and TTS components", 
      "hooks": "Git hooks and integration scripts",
      "generators": "Code generation utilities",
      "orchestration": "Orchestration and workflow management"
    },
    "apps": {
      "web": "Web application components",
      "mobile": "Mobile application components", 
      "backend": "Backend service implementations",
      "pwa": "Progressive Web App components"
    },
    "scripts": "Automation and maintenance scripts",
    "archive": "Archived files and old versions",
    "backup": "Automatic backups"
  }
}