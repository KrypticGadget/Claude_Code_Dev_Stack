# NGROK Configuration Environment Variables
# Copy this file to .env and fill in your values

# NGROK Authentication
NGROK_AUTHTOKEN=your_ngrok_auth_token_here
NGROK_REGION=us

# Custom Domains (Premium feature)
NGROK_CUSTOM_DOMAIN_WEBAPP=your-webapp.ngrok.app
NGROK_CUSTOM_DOMAIN_API=your-api.ngrok.app
NGROK_CUSTOM_DOMAIN_WS=your-ws.ngrok.app
NGROK_CUSTOM_DOMAIN_TERMINAL=your-terminal.ngrok.app
NGROK_CUSTOM_DOMAIN_BACKEND=your-backend.ngrok.app
NGROK_CUSTOM_DOMAIN_WEBHOOKS=your-webhooks.ngrok.app
NGROK_CUSTOM_DOMAIN_MONITORING=your-monitoring.ngrok.app
NGROK_CUSTOM_DOMAIN_PREVIEW=your-preview.ngrok.app

# Subdomain Configuration (Free feature)
NGROK_SUBDOMAIN_WEBAPP=claude-webapp
NGROK_SUBDOMAIN_API=claude-api
NGROK_SUBDOMAIN_WS=claude-ws
NGROK_SUBDOMAIN_TERMINAL=claude-terminal
NGROK_SUBDOMAIN_BACKEND=claude-backend
NGROK_SUBDOMAIN_WEBHOOKS=claude-webhooks
NGROK_SUBDOMAIN_MONITORING=claude-monitoring
NGROK_SUBDOMAIN_PREVIEW=claude-preview

# Service Ports
CLAUDE_WEBAPP_PORT=3000
CLAUDE_API_PORT=3001
CLAUDE_WS_PORT=3002
CLAUDE_TERMINAL_PORT=3003
CLAUDE_BACKEND_PORT=8000
CLAUDE_WEBHOOK_PORT=4000
CLAUDE_MONITORING_PORT=4040
CLAUDE_PREVIEW_PORT=5173

# OAuth Configuration (Premium feature)
NGROK_OAUTH_PROVIDER=google
NGROK_ALLOWED_EMAILS=your-email@example.com,team@example.com

# IP Restrictions
NGROK_ALLOWED_IPS=0.0.0.0/0
NGROK_TERMINAL_ALLOWED_IPS=192.168.1.0/24
NGROK_MONITORING_ALLOWED_IPS=127.0.0.1/32
NGROK_WEBHOOK_ALLOWED_IPS=0.0.0.0/0

# Authentication
NGROK_TERMINAL_PASSWORD=secure_terminal_password
NGROK_MONITORING_PASSWORD=secure_monitoring_password

# Webhook Verification
NGROK_WEBHOOK_PROVIDER=github
NGROK_WEBHOOK_SECRET=your_webhook_secret

# Logging
NGROK_LOG_LEVEL=info
NGROK_LOG_PATH=./logs/ngrok.log

# Advanced Configuration
NODE_ENV=development
HOSTNAME=local-dev