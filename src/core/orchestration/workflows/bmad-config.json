      ],
      "manual_reviews": [
        "ux_review",
        "stakeholder_approval",
        "user_acceptance_testing"
      ]
    },
    "development_validation": {
      "criteria": [
        "code_coverage_threshold",
        "performance_benchmarks_met",
        "security_vulnerabilities_resolved",
        "functional_tests_passing",
        "integration_tests_passing"
      ],
      "automated_checks": [
        "unit_tests",
        "integration_tests",
        "security_scan",
        "performance_tests",
        "code_quality_analysis"
      ],
      "manual_reviews": [
        "code_review",
        "qa_testing",
        "user_acceptance_testing"
      ]
    }
  },
