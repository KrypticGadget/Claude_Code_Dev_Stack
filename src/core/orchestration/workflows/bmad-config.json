{
  "system": {
    "name": "BMAD Workflow System",
    "version": "3.6.9",
    "description": "Complete Business Model, Architecture, Design workflow orchestration with agile methodology integration"
  },
  "project_defaults": {
    "workingDirectory": ".",
    "teamSize": 8,
    "industryType": "technology",
    "complianceRequirements": [],
    "remoteTeam": true,
    "sprintDuration": 14,
    "qualityGates": "adaptive"
  },
  "bmad_configuration": {
    "phases": {
      "business_model": {
        "name": "Business Model Analysis",
        "description": "Market research, competitive analysis, revenue models",
        "estimated_duration": "2-3 sprints",
        "key_deliverables": [
          "business-model-canvas",
          "market-research-report",
          "competitive-analysis",
          "revenue-model-specification",
          "customer-validation-results"
        ],
        "quality_gates": [
          "business-model-validation"
        ],
        "stakeholder_approvals": [
          "ceo",
          "product_owner",
          "finance_director"
        ]
      },
      "architecture": {
        "name": "Architecture Planning",
        "description": "System design, technical specifications, scalability planning",
        "estimated_duration": "3-4 sprints",
        "key_deliverables": [
          "system-architecture-document",
          "technology-stack-selection",
          "scalability-plan",
          "integration-blueprint",
          "security-framework",
          "deployment-strategy"
        ],
        "quality_gates": [
          "architecture-validation"
        ],
        "stakeholder_approvals": [
          "cto",
          "lead_architect",
          "security_lead"
        ]
      },
      "design": {
        "name": "Design Implementation",
        "description": "UX/UI design, wireframes, prototypes, user flows",
        "estimated_duration": "2-3 sprints",
        "key_deliverables": [
          "user-experience-design",
          "interface-mockups",
          "design-system",
          "interactive-prototypes",
          "user-journey-maps",
          "accessibility-guidelines"
        ],
        "quality_gates": [
          "design-validation"
        ],
        "stakeholder_approvals": [
          "product_owner",
          "ux_lead",
          "key_customer"
        ]
      },
      "development": {
        "name": "Development Coordination",
        "description": "Sprint planning, task distribution, quality gates",
        "estimated_duration": "ongoing sprints",
        "key_deliverables": [
          "working-software",
          "test-reports",
          "performance-benchmarks",
          "deployment-package",
          "user-documentation"
        ],
        "quality_gates": [
          "development-validation"
        ],
        "stakeholder_approvals": [
          "product_owner",
          "qa_manager",
          "cto"
        ]
      }
    }
  },
  "agile_integration": {
    "methodology": "scrum_with_kanban",
    "ceremonies": {
      "sprint_planning": {
        "frequency": "sprint_start",
        "duration": "4-8 hours",
        "participants": ["product_owner", "scrum_master", "development_team"],
        "bmad_integration": true
      },
      "daily_standup": {
        "frequency": "daily",
        "duration": "15 minutes",
        "participants": ["development_team", "scrum_master"],
        "bmad_tracking": true
      },
      "sprint_review": {
        "frequency": "sprint_end",
        "duration": "2-4 hours",
        "participants": ["product_owner", "stakeholders", "development_team"],
        "bmad_deliverable_review": true
      },
      "sprint_retrospective": {
        "frequency": "sprint_end",
        "duration": "1-3 hours",
        "participants": ["development_team", "scrum_master"],
        "bmad_process_improvement": true
      }
    },
    "kanban_board": {
      "columns": [
        { "id": "backlog", "name": "Backlog", "wip_limit": null },
        { "id": "bmad_analysis", "name": "BMAD Analysis", "wip_limit": 3 },
        { "id": "in_progress", "name": "In Progress", "wip_limit": 5 },
        { "id": "review", "name": "Review", "wip_limit": 3 },
        { "id": "quality_gate", "name": "Quality Gate", "wip_limit": 2 },
        { "id": "done", "name": "Done", "wip_limit": null }
      ]
    }
  },
  "user_story_management": {
    "estimation_method": "planning_poker",
    "story_point_scale": [1, 2, 3, 5, 8, 13, 21],
    "acceptance_criteria_required": true,
    "invest_validation": true,
    "bmad_integration": true,
    "templates": {
      "business_model": [
        "business-model-canvas",
        "market-research",
        "revenue-model-validation",
        "customer-segment-analysis"
      ],
      "architecture": [
        "system-architecture",
        "database-design",
        "technology-stack-selection",
        "security-framework-design"
      ],
      "design": [
        "user-experience-design",
        "visual-design",
        "design-system-creation",
        "accessibility-implementation"
      ],
      "development": [
        "feature-implementation",
        "api-development",
        "testing-implementation",
        "performance-optimization"
      ]
    }
  },
  "progress_tracking": {
    "kpis": {
      "project_health": { "target": 85, "weight": 1.0 },
      "schedule_adherence": { "target": 95, "weight": 0.3 },
      "sprint_velocity": { "target": 40, "weight": 0.2 },
      "quality_score": { "target": 90, "weight": 0.25 },
      "stakeholder_satisfaction": { "target": 4.5, "weight": 0.2 },
      "bmad_completion": { "target": 100, "weight": 0.25 },
      "workflow_efficiency": { "target": 85, "weight": 0.15 }
    },
    "reporting_frequency": {
      "executive_summary": "weekly",
      "technical_progress": "bi_weekly",
      "product_status": "weekly",
      "financial_status": "monthly"
    },
    "alerts": {
      "milestone_delay": { "enabled": true, "severity": "warning" },
      "quality_gate_failure": { "enabled": true, "severity": "critical" },
      "budget_variance": { "enabled": true, "severity": "high" },
      "stakeholder_satisfaction_drop": { "enabled": true, "severity": "high" }
    }
  },
  "stakeholder_communication": {
    "stakeholder_roles": [
      "ceo",
      "cto",
      "product_owner",
      "lead_architect",
      "qa_manager",
      "marketing_director",
      "finance_director",
      "key_customer"
    ],
    "communication_channels": [
      "email",
      "slack",
      "dashboard",
      "video_call",
      "sms"
    ],
    "report_templates": [
      "executive_summary",
      "technical_progress",
      "product_status",
      "financial_status"
    ],
    "approval_workflows": {
      "business_model": ["ceo", "finance_director"],
      "architecture_design": ["cto", "lead_architect"],
      "design_system": ["product_owner", "ux_lead"],
      "release_readiness": ["product_owner", "qa_manager", "cto"]
    }
  },
  "quality_gates": {
    "business_model_validation": {
      "criteria": [
        "market_size_validated",
        "customer_segments_identified",
        "value_proposition_tested",
        "revenue_model_feasible",
        "competitive_advantage_clear"
