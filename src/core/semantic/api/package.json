{
  "name": "@claude-code/semantic-api",
  "version": "1.0.0",
  "description": "Semantic Analysis API Server - Tree-sitter based semantic analysis for 16+ programming languages",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "docker:build": "docker build -t semantic-api .",
    "docker:run": "docker run -p 3001:3001 semantic-api"
  },
  "keywords": [
    "semantic-analysis",
    "tree-sitter",
    "ast",
    "code-intelligence",
    "pattern-matching",
    "cross-language",
    "api",
    "websocket",
    "real-time"
  ],
  "author": "Claude Code Dev Stack",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "ws": "^8.14.2",
    "uuid": "^9.0.1",
    "lru-cache": "^10.0.1",
    "tree-sitter": "^0.20.4",
    "tree-sitter-typescript": "^0.20.3",
    "tree-sitter-javascript": "^0.20.1",
    "tree-sitter-python": "^0.20.4",
    "tree-sitter-rust": "^0.20.4",
    "tree-sitter-go": "^0.20.0",
    "tree-sitter-java": "^0.20.2",
    "tree-sitter-c": "^0.20.6",
    "tree-sitter-cpp": "^0.20.0",
    "tree-sitter-c-sharp": "^0.20.0",
    "tree-sitter-php": "^0.22.0",
    "tree-sitter-ruby": "^0.20.0",
    "tree-sitter-kotlin": "^0.3.1",
    "tree-sitter-swift": "^0.4.0",
    "tree-sitter-bash": "^0.20.4",
    "tree-sitter-json": "^0.20.2",
    "tree-sitter-yaml": "^0.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/express": "^4.17.20",
    "@types/cors": "^2.8.14",
    "@types/compression": "^1.7.3",
    "@types/ws": "^8.5.8",
    "@types/uuid": "^9.0.5",
    "@types/jest": "^29.5.6",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.15"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/claude-code/semantic-api"
  },
  "bugs": {
    "url": "https://github.com/claude-code/semantic-api/issues"
  },
  "homepage": "https://github.com/claude-code/semantic-api#readme",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/*.test.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/explicit-function-return-type": "off"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  }
}