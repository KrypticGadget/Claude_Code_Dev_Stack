{
  "name": "@claude-code/context-preservation",
  "version": "1.0.0",
  "description": "Robust cross-agent context preservation system with PostgreSQL, Redis, and real-time WebSocket support",
  "main": "context-api.js",
  "type": "commonjs",
  "scripts": {
    "start": "node context-api.js",
    "dev": "nodemon context-api.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint *.js",
    "lint:fix": "eslint *.js --fix",
    "format": "prettier --write *.js",
    "build": "npm run lint && npm test",
    "docker:build": "docker build -t claude-code/context-preservation .",
    "docker:run": "docker run -p 3100:3100 claude-code/context-preservation",
    "setup:db": "node scripts/setup-database.js",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "backup": "node scripts/backup.js",
    "restore": "node scripts/restore.js",
    "monitor": "node scripts/monitor.js",
    "benchmark": "node scripts/benchmark.js",
    "docs": "jsdoc -c jsdoc.config.js"
  },
  "keywords": [
    "context",
    "preservation",
    "cross-agent",
    "postgresql",
    "redis",
    "websocket",
    "real-time",
    "versioning",
    "compression",
    "encryption",
    "search",
    "analytics"
  ],
  "author": "Claude Code Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3",
    "ws": "^8.14.2",
    "uuid": "^9.0.1",
    "jsonschema": "^1.4.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "prom-client": "^15.0.0",
    "crypto": "^1.0.1",
    "zlib": "^1.0.5",
    "yaml": "^2.3.4",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "jsdoc": "^4.0.2",
    "redis-memory-server": "^0.9.0",
    "pg-mem": "^2.8.1"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "*.js",
      "!context-api.js",
      "!scripts/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "commonjs"
    },
    "rules": {
      "node/no-missing-require": "error",
      "node/no-unsupported-features/es-syntax": "off",
      "no-console": "off",
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KrypticGadget/Claude_Code_Dev_Stack.git",
    "directory": "core/context"
  },
  "bugs": {
    "url": "https://github.com/KrypticGadget/Claude_Code_Dev_Stack/issues"
  },
  "homepage": "https://github.com/KrypticGadget/Claude_Code_Dev_Stack#readme"
}