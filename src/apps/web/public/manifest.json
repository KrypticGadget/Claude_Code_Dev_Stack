{
  "name": "Claude Code Dev Stack",
  "short_name": "Claude Code",
  "description": "Production-ready development environment with AI-powered code generation",
  "theme_color": "#000000",
  "background_color": "#0D1117",
  "display": "standalone",
  "orientation": "portrait-primary",
  "scope": "/",
  "start_url": "/",
  "id": "claude-code-dev-stack",
  "categories": ["development", "productivity", "developer"],
  "lang": "en",
  "icons": [
    {
      "src": "pwa-64x64.png",
      "sizes": "64x64",
      "type": "image/png"
    },
    {
      "src": "pwa-192x192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "pwa-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    },
    {
      "src": "maskable-icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "AI Chat",
      "short_name": "Chat",
      "description": "Start a conversation with Claude AI",
      "url": "/chat",
      "icons": [
        {
          "src": "icons/chat-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Documentation",
      "short_name": "Docs",
      "description": "Browse interactive documentation",
      "url": "/docs",
      "icons": [
        {
          "src": "icons/docs-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Components",
      "short_name": "Components",
      "description": "Explore UI component library",
      "url": "/components",
      "icons": [
        {
          "src": "icons/components-96x96.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "screenshots/desktop-dashboard.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Dashboard view on desktop"
    },
    {
      "src": "screenshots/mobile-chat.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Chat interface on mobile"
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+claudecode",
      "url": "/?action=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "application/json": [".json"],
        "text/plain": [".txt", ".md"],
        "text/javascript": [".js", ".ts"],
        "text/x-python": [".py"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["text/*", "image/*"]
        }
      ]
    }
  }
}