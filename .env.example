# Claude Code Dev Stack V3.0 Environment Configuration

# Application Settings
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database Configuration
POSTGRES_PASSWORD=claude_dev_db_secure_2024
REDIS_PASSWORD=claude_dev_redis_secure_2024

# MCP Server Configuration
MCP_GITHUB_TOKEN=your_github_token_here
MCP_SERVER_PORT=3333

# Monitoring and Analytics
GRAFANA_PASSWORD=admin_secure_password

# Security Settings
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
SESSION_SECRET=your_session_secret_here_minimum_32_characters

# API Keys (Optional)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Docker Configuration
COMPOSE_PROJECT_NAME=claude-dev-stack
COMPOSE_FILE=docker-compose.yml

# Development Settings
ENABLE_DEBUG=true
ENABLE_HOT_RELOAD=true
ENABLE_SOURCE_MAPS=true

# Performance Settings
MAX_CONCURRENT_EXECUTIONS=5
BROWSER_TIMEOUT=30000
SANDBOX_TIMEOUT=30000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# SSL/TLS (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30