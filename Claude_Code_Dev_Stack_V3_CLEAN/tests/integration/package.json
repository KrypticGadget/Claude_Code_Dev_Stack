{
  "name": "claude-code-integration-tests",
  "version": "1.0.0",
  "description": "Integration tests for Claude Code Dev Stack v3.0",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest e2e/ --testTimeout=60000",
    "test:python": "pytest python/",
    "test:typescript": "jest typescript/",
    "test:performance": "jest --testNamePattern='performance|benchmark'",
    "test:security": "jest --testNamePattern='security'",
    "clean": "rimraf coverage/ coverage-*/ *.xml",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0",
    "@types/node": "^20.10.0",
    "jest-junit": "^16.0.0",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.2",
    "playwright": "^1.40.0",
    "@playwright/test": "^1.40.0",
    "ws": "^8.14.2",
    "@types/ws": "^8.5.10"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/typescript",
      "<rootDir>/e2e"
    ],
    "testMatch": [
      "**/*.test.ts",
      "**/*.test.js"
    ],
    "collectCoverageFrom": [
      "../core/**/*.{ts,js}",
      "../apps/**/*.{ts,js,tsx}",
      "../integrations/**/*.{ts,js}",
      "!**/*.d.ts",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/build/**"
    ],
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/setup/jest.setup.ts"
    ],
    "testTimeout": 30000,
    "maxWorkers": "50%",
    "verbose": true
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended"
    ],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  },
  "keywords": [
    "testing",
    "integration",
    "claude",
    "mcp",
    "lsp",
    "semantic-analysis"
  ],
  "author": "Claude Code Team",
  "license": "MIT"
}