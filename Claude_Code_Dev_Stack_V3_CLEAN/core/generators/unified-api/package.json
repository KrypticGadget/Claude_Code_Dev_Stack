{
  "name": "@claude-code/unified-mcp-generator",
  "version": "1.0.0",
  "description": "Unified API for Python and Node.js MCP generators",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "unified-mcp-generator": "./bin/cli.js"
  },
  "files": [
    "dist",
    "bin",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && chmod +x bin/cli.js",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "format": "prettier --write src/**/*.ts",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "mcp",
    "openapi",
    "generator",
    "python",
    "nodejs",
    "unified",
    "api"
  ],
  "author": "Claude Code Dev Stack",
  "license": "MIT",
  "dependencies": {
    "@apidevtools/swagger-parser": "^10.1.1",
    "commander": "^13.1.0",
    "openapi-types": "^12.1.3",
    "json-schema": "^0.4.0",
    "yaml": "^2.3.4",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "inquirer": "^9.2.12",
    "fs-extra": "^11.2.0",
    "execa": "^8.0.1",
    "ajv": "^8.12.0",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/fs-extra": "^11.0.4",
    "@types/semver": "^7.5.6",
    "@types/inquirer": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "rimraf": "^5.0.5",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}