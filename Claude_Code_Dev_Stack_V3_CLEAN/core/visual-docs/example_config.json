{
  "_comment": "Visual Documentation Pipeline Configuration Example",
  "_description": "This configuration file controls all aspects of visual documentation generation",
  
  "project_root": "/path/to/your/project",
  "output_dir": "/path/to/your/project/docs/visual",
  
  "source_directories": {
    "_comment": "Directories to analyze for code structure",
    "source_dirs": [
      "/path/to/your/project/src",
      "/path/to/your/project/lib",
      "/path/to/your/project/core"
    ],
    "include_patterns": [
      "*.py",
      "*.js",
      "*.ts",
      "*.jsx",
      "*.tsx",
      "*.md"
    ],
    "exclude_patterns": [
      "__pycache__",
      "node_modules",
      ".git",
      ".venv",
      "dist",
      "build",
      "*.pyc"
    ]
  },
  
  "diagram_generation": {
    "_comment": "Configure which diagram types to generate",
    "diagram_formats": ["mermaid", "plantuml", "d3"],
    "mermaid_config": {
      "theme": "default",
      "max_components": 8,
      "preferred_direction": "LR",
      "enable_clickable_links": true
    },
    "plantuml_config": {
      "theme": "plain",
      "include_class_diagrams": true,
      "include_sequence_diagrams": true,
      "include_component_diagrams": true
    },
    "d3_config": {
      "enable_interactive": true,
      "force_graph_enabled": true,
      "tree_view_enabled": true,
      "network_analysis_enabled": true
    },
    "flowchart_config": {
      "auto_generate_workflows": true,
      "include_decision_points": true,
      "max_complexity": 10
    }
  },
  
  "interactive_documentation": {
    "_comment": "Configuration for interactive HTML documentation",
    "generate_interactive": true,
    "include_code_examples": true,
    "include_live_diagrams": true,
    "responsive_design": true,
    "search_functionality": true,
    "navigation_structure": "hierarchical"
  },
  
  "screenshot_generation": {
    "_comment": "Automated screenshot configuration",
    "generate_screenshots": false,
    "viewport_sizes": [
      {"name": "desktop", "width": 1920, "height": 1080},
      {"name": "laptop", "width": 1366, "height": 768},
      {"name": "tablet", "width": 768, "height": 1024},
      {"name": "mobile", "width": 375, "height": 667}
    ],
    "formats": ["png", "jpg", "webp"],
    "quality": "high",
    "wait_for_render": true,
    "capture_full_page": true,
    "generate_gallery": true
  },
  
  "video_generation": {
    "_comment": "Video tutorial generation configuration",
    "generate_videos": false,
    "video_formats": ["mp4", "webm"],
    "frame_rate": 30,
    "resolution": [1920, 1080],
    "quality": "high",
    "generate_overview_video": true,
    "generate_component_videos": true,
    "generate_architecture_tour": true,
    "max_video_duration": 300
  },
  
  "codeboarding_integration": {
    "_comment": "Integration with CodeBoarding onboarding patterns",
    "integration_mode": "codeboarding",
    "update_existing_onboarding": true,
    "create_component_files": true,
    "include_badges": true,
    "follow_visual_guidelines": true,
    "generate_faq_links": true,
    "onboarding_directory": "docs/onboarding",
    "assets_directory": "docs/onboarding/assets"
  },
  
  "content_analysis": {
    "_comment": "Configuration for code analysis and content extraction",
    "analyze_python": true,
    "analyze_javascript": true,
    "analyze_typescript": true,
    "extract_docstrings": true,
    "analyze_dependencies": true,
    "detect_patterns": true,
    "complexity_analysis": true,
    "max_components_per_diagram": 8,
    "max_methods_per_class": 10
  },
  
  "output_customization": {
    "_comment": "Customize output format and styling",
    "css_theme": "default",
    "brand_colors": {
      "primary": "#1f77b4",
      "secondary": "#ff7f0e",
      "success": "#2ca02c",
      "warning": "#d62728"
    },
    "custom_css_file": null,
    "custom_js_file": null,
    "include_search": true,
    "include_print_styles": true
  },
  
  "performance_optimization": {
    "_comment": "Performance and resource usage configuration",
    "parallel_processing": true,
    "max_workers": 4,
    "cache_analysis_results": true,
    "optimize_images": true,
    "compress_videos": true,
    "lazy_load_diagrams": true
  },
  
  "logging_and_monitoring": {
    "_comment": "Logging and progress monitoring",
    "log_level": "INFO",
    "log_file": "visual_docs_pipeline.log",
    "progress_reporting": true,
    "generate_summary_report": true,
    "include_metrics": true
  },
  
  "advanced_features": {
    "_comment": "Advanced and experimental features",
    "ai_generated_descriptions": false,
    "auto_detect_project_type": true,
    "generate_api_documentation": true,
    "include_dependency_analysis": true,
    "generate_comparison_tables": false,
    "multilingual_support": false
  },
  
  "examples": {
    "_comment": "Example configurations for different project types",
    "educational_project": {
      "diagram_formats": ["mermaid"],
      "generate_screenshots": true,
      "generate_videos": false,
      "focus_on_learning_paths": true
    },
    "framework_project": {
      "diagram_formats": ["mermaid", "plantuml", "d3"],
      "generate_screenshots": true,
      "generate_videos": true,
      "detailed_api_docs": true
    },
    "application_project": {
      "diagram_formats": ["mermaid", "d3"],
      "generate_screenshots": true,
      "generate_videos": true,
      "user_journey_focus": true
    }
  }
}