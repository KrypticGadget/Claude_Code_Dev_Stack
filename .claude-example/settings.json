{
  "version": "1.0.0",
  "agents": {
    "enabled": true,
    "path": "agents",
    "prefix": "@",
    "defaultAgent": "master-orchestrator"
  },
  "commands": {
    "enabled": true,
    "path": "commands",
    "prefix": "/"
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python \"$CLAUDE_PROJECT_DIR/.claude/hooks/session_loader.py\"",
            "timeout": 30
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python \"$CLAUDE_PROJECT_DIR/.claude/hooks/agent_mention_parser.py\"",
            "timeout": 10
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python \"$CLAUDE_PROJECT_DIR/.claude/hooks/quality_gate.py\"",
            "timeout": 15
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python \"$CLAUDE_PROJECT_DIR/.claude/hooks/post_command.py\"",
            "timeout": 10
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python \"$CLAUDE_PROJECT_DIR/.claude/hooks/session_saver.py\"",
            "timeout": 30
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python \"$CLAUDE_PROJECT_DIR/.claude/hooks/model_tracker.py\"",
            "timeout": 10
          }
        ]
      }
    ]
  },
  "mcps": {
    "_comment": "MCPs must be installed via Claude Code CLI - see docs/MCP_INSTALLATION.md",
    "_note": "Only 3 essential MCPs are recommended: Playwright, Obsidian, and Brave Search",
    "enabled": true,
    "servers": {}
  },
  "preferences": {
    "theme": "dark",
    "autoSave": true,
    "formatOnSave": true,
    "telemetry": false
  }
}